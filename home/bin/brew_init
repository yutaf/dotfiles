## Install the binaries
#brew install ${binaries[@]} 2> /dev/null || true

#  vim for NeoBundle
brew install vim --with-lua 2> /dev/null || true
# wireshark
# takes tremendous time to install
#brew install wireshark --with-qt 2> /dev/null || true

# Remove outdated versions from the cellar
brew cleanup

# TODO apps
APP_LIST="
iterm2
phpstorm
dropbox
google-chrome
firefox
vagrant
virtualbox
transmit
slack
skype
appcleaner
send-to-kindle
magican
hoster
"

log "installing apps..."
echo "$APP_LIST" | xargs -t -n $PARALLEL -P $PARALLEL -I % brew cask install % 2> /dev/null || true

